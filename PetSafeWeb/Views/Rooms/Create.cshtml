@model RoomViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group col">

            @{
                if (Model.Services != null)
                {
                    for (int i = 0; i < Model.Services.Count; i++)
                    {
                        <label>
                            @Html.DisplayName(Model.Services[i].Name)
                            <input asp-for="@Model.Services[i].IsActive" type="checkbox">
                            <input asp-for="@Model.Services[i].Name" type="hidden" value="@Model.Services[i].Name " />
                            <input asp-for="@Model.Services[i].Id" type="hidden" value="@Model.Services[i].Id " />
                        </label>
                    }

                }
            }
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
