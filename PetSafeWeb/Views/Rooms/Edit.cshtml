@model RoomViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                @if (Model.Services != null)
                {
                    for (int i = 0; i < Model.Services.Count; i++)
                    {
                        <label>
                            @Html.DisplayName(Model.Services[i].Name)
                            <input asp-for="@Model.Services[i].IsActive" type="checkbox">
                            <input asp-for="@Model.Services[i].Name" type="hidden" value="@Model.Services[i].Name " />
                            <input asp-for="@Model.Services[i].Id" type="hidden" value="@Model.Services[i].Id " />
                        </label>
                    }

                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
